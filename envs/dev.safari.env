# Development environment for Safari (SQLite)
DEBUG=True
DJANGO_ENV=development
DJANGO_SETTINGS_MODULE=config.settings.dev

# Database configuration
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Server configuration
WSGI_SERVER=runserver
WSGI_PORT=8765

# Security settings - all SSL/HTTPS disabled
SECRET_KEY=django-insecure-safari-key
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
SECURE_SSL_REDIRECT=False

# Static files
STATIC_URL=/static/
MEDIA_URL=/media/
